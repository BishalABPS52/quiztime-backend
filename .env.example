# Production Environment Configuration
# Copy this file to .env and fill in your production values

# Server Configuration
PORT=4000
NODE_ENV=production

# Database Configuration (CRITICAL: Replace with your production MongoDB URI)
MONGODB_URI=mongodb+srv://your_production_user:your_secure_password@your_cluster.mongodb.net/quiztime_production

# JWT Configuration (CRITICAL: Generate a strong 64+ character secret)
JWT_SECRET=your_very_secure_random_string_at_least_64_characters_long_for_production_security

# Admin Configuration (CRITICAL: Separate admin JWT secret - REQUIRED FOR ADMIN PANEL)
ADMIN_JWT_SECRET=your_admin_specific_jwt_secret_different_from_user_jwt_for_security

# Admin Access Control (CRITICAL: Define who can access admin panel)
ADMIN_EMAILS=admin@yourdomain.com,youremail@gmail.com
ADMIN_USERNAMES=admin,youradminusername

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password_not_regular_password

# CORS Configuration (CRITICAL: Set to your production frontend domain)
CORS_ORIGIN=https://your-production-frontend-domain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/quiztime.log